# Quiz Master V2 - Environment Configuration

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY="Abhist_jain"
JWT_SECRET_KEY="Abhist_jain"

# Database Configuration
DATABASE_URL=sqlite:///quiz_master.db

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Cache Configuration
CACHE_TYPE=RedisCache
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Application Settings
CREATE_DEFAULT_DATA=true
DEBUG=true
SQLALCHEMY_ECHO=false

# Email Configuration (Optional - for reminders and reports)
# Uncomment and configure if you want email functionality
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# Webhook Configuration (Optional)
# GOOGLE_CHAT_WEBHOOK=https://chat.googleapis.com/v1/spaces/YOUR_SPACE/messages?key=YOUR_KEY
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO